# Happy Cricket Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
MONGO_ROOT_USERNAME=happy_cricket_admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here_minimum_32_characters

# Payment Gateways
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

RAZORPAY_KEY_ID=rzp_live_your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# AI Services
OPENAI_API_KEY=sk-your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# EntitySport Cricket API
ENTITYSPORT_ACCESS_KEY=your_entitysport_access_key_here
ENTITYSPORT_SECRET_KEY=your_entitysport_secret_key_here
ENTITYSPORT_TOKEN=your_entitysport_token_here

# Monitoring
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# AWS Configuration (if using AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=happy-cricket-assets

# Domain Configuration
DOMAIN_NAME=happycricket.com
API_DOMAIN=api.happycricket.com

# Security
CORS_ORIGINS=https://happycricket.com,https://www.happycricket.com
ALLOWED_HOSTS=happycricket.com,www.happycricket.com,api.happycricket.com

# App Configuration
APP_NAME=Happy Cricket
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Session Configuration
SESSION_SECRET_KEY=your_session_secret_key_here
SESSION_TIMEOUT_MINUTES=1440

# KYC Configuration
KYC_STORAGE_PATH=/app/storage/kyc
MAX_FILE_SIZE_MB=10

# Betting Configuration
MIN_BET_AMOUNT=0.1
MAX_BET_AMOUNT=10000
DEFAULT_ODDS_MARGIN=0.05

# Happy Coin Configuration
HAPPY_COIN_CONVERSION_RATE=1000
MIN_DEPOSIT_INR=100
MIN_WITHDRAWAL_INR=500
WITHDRAWAL_FEE_PERCENTAGE=2.5

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=happy-cricket-backups