# Happy Cricket Mobile App Environment Variables

# API Configuration
API_BASE_URL=https://api.happycricket.com
WS_BASE_URL=wss://api.happycricket.com

# Development URLs (for local development)
DEV_API_BASE_URL=http://192.168.1.100:8001
DEV_WS_BASE_URL=ws://192.168.1.100:8001

# App Configuration
APP_NAME=Happy Cricket
APP_VERSION=1.0.0
ENVIRONMENT=production

# Firebase Configuration (Add your Firebase config)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
RAZORPAY_KEY_ID=rzp_live_your_razorpay_key_id

# Social Login (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
FACEBOOK_APP_ID=your_facebook_app_id

# Analytics & Crash Reporting
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true

# Feature Flags
ENABLE_VOICE_ASSISTANT=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_DARK_MODE=true
ENABLE_NOTIFICATIONS=true

# App Store Configuration
IOS_APP_ID=your_ios_app_id
ANDROID_PACKAGE_NAME=com.happycricket.app